<resources>

    <style name="Widget.Tivi.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/navigationBackgroundColor</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="itemIconTint">@color/bottom_nav_item_colors</item>
        <item name="itemTextColor">@color/bottom_nav_item_colors</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceCaption</item>
        <item name="itemTextAppearance">?attr/textAppearanceCaption</item>
    </style>

    <style name="Widget.Tivi.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="Widget.Tivi.GridItem.Annotation" parent="android:Widget.TextView">
        <item name="android:background">@drawable/annotation_bg</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableTint">?android:attr/textColorPrimary</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Tivi.PosterAnnotation</item>
    </style>

</resources>